	  <ul class="title-area">
	    <li class="name">
	    	<ul><a href="#"><img src="images/header.png" id="header"></a></div></ul>
	    </li>
        <li class="toggle-topbar menu-icon"><a href="/logout"><span>Menu</span></a></li>
	  </ul>

	    <section class="top-bar-section">
		    <!-- Left Nav Section -->
		    <ul class="right">
		    	<li class="divider"></li>
			    <li style="text-align:center"><a href="/logout" id ="exit">Exit Session</a></li>	
				<li class="divider"></li>  
		 	</ul>
	 	</section>
	</nav>

	<div class="row">
		<div class="large-4 columns leftrow">
			<h3><%= session.name %></h3>
<% if(session.code){%>
			<p class="center">Class code: <i><%= session.code %></i></p> <% } %>
			<hr />
			<div class="panel">
				<ul class="side-nav">
				  <h3><li class="active">Clicker</li></h3>
				  <p>Create another quiz or view quiz results.</p>
				  <h3><li><a href="/teacher_topics">Topics</a></li></h3>
				  <p>View students' understanding of topics.</p>
				  <h3><li><a href="/teacher_questions">Questions</a></li></h3>
				  <p>See student questions.</p>
				</ul>
			</div>
		</div>
	<div class="large-8 columns">
			<h3>Clicker</h3>
			<hr />
			<!-- Grid Example -->
			<form id="cq" action="/clicker_create" method="post">
			<div class="row">
				<div class="large-12 columns  rightrow">
					<div class="panel">		
						<h4>View class answers</h4>
<!-- Show last submitted question and submitted answers-->
<canvas id="canvas" height="400" width="450"></canvas>
<div id="content"></div>
						<hr />
						<h4>Ask your class a question</h4>		
						<div class="row">
					      <div class="large-12 columns">
					        <label>Question</label>
					        <input id="qf" name="q" type="text" placeholder="Type your question here">
					      </div>
					    </div>
					    
					     <div class="row">
					      <div class="large-6 columns">
					        <label>Answer Choice A</label>
					        <input id="o1f" name="op1" type="text" placeholder="">
					      </div>
					      <div class="large-6 columns">
					        <label>Answer Choice B</label>
					        <input id="o2f" name="op2" type="text" placeholder="">
					      </div>
					  	 </div>

					  	 <div class="row">
					      <div class="large-6 columns">
					        <label>Answer Choice C</label>
					        <input id="o3f" name="op3" type="text" placeholder="">
					      </div>
					      <div class="large-6 columns">
					        <label>Answer Choice D</label>
					        <input id="o4f" name="op4" type="text" placeholder="">
					      </div>
					  	 </div>

						<div class="row">
					  	 <div class="small-2 columns">
						   <input type="button" style="text-align:center" onclick="return false;" class="button prefix" id="submit" value="Submit"></input>
						 </div>
						</div>
					</div>
				</div>
			</div>

	<hr />
	<!--Bottom Bar of information-->
	<div class="row">
		<div class="large-12 columns">
			<p style="text-align:center">2013 Whiteboard Learning &#153; &sdot; <a href="/contact_us">Contact Us</a></p>
		</div>
	</div>
	</div>


