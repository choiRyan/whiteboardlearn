	<nav class="top-bar">
	  <ul class="title-area">
	    <li class="name">
	    	<ul><a href="#"><img src="images/header.png" id="header"></a></div></ul>
	    </li>
        <li class="toggle-topbar menu-icon"><a href="logout.html"><span>Menu</span></a></li>
	  </ul>

	    <section class="top-bar-section">
		    <!-- Left Nav Section -->
		    <ul class="right">
		    	<li class="divider"></li>
			    <li style="text-align:center"><a href="logout.html" id ="exit">Exit Session</a></li>	
				<li class="divider"></li>  
		 	</ul>
	 	</section>
	</nav>

	<div class="row">
		<div class="large-4 columns leftrow">
			<h3><%= session.name %></h3>
<% if(session.code){ %>
			<p class="center">Class code: <i><%= session.code %></i></p><% } %>
			<hr />
			<div class="panel">
				<ul class="side-nav">
				  <h3><li class="active">Clicker</li></h3>
				  <p>See the current quiz.</p>
				  <h3><li><a href="/student_topics">Topics</a></li></h3>
				  <p>Rate your understanding of the current class topics.</p>
				  <h3><li><a href="/student_questions">Questions</a></li></h3>
				  <p>Suggest a question to your teacher or upvote questions suggested by your peers.</p>
				</ul>
			</div>
		</div>
<div class="large-8 columns">
			
			<div class="row">
				<div class="large-12 columns rightrow">	
						<hr />	
						<h1>Clicker</h1>
						<hr />
						<!-- Grid Example -->
<% if(!session.q){ %>
						<h4>No current questions.</h4><br/> <% }else{ %>
						<h4><%= session.q %></h4><br/>
<!--only show options if student hasn't answered-->
<!-- student_clicker_answered -->
						<% if(session.o1) { %><p><a href="student_clicker_answeredA" class="small success button choice">A</a><%= session.o1 %></p><% } %>

						<% if(session.o2) { %><p><a href="student_clicker_answeredB" class="small success button choice">B</a><%= session.o2 %></p><% } %>

						<% if(session.o3) { %><p><a href="student_clicker_answeredC" class="small success button choice">C</a><%= session.o3 %></p><% } %>

						<% if(session.o4) { %><p><a href="student_clicker_answeredD" class="small success button choice">D</a><%= session.o4 %></p><% } %>
<% } %>
				</div>
			</div>
	<hr />
	<!--Bottom Bar of information-->
	<div class="row">
		<div class="large-12 columns">
			<p style="text-align:center">2013 Whiteboard Learning &#153; &sdot; <a href="contact_us.html">Contact Us</a></p>
		</div>
	</div>
